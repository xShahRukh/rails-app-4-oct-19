

<body style="width: '100%'">
<table>
	
	<tr>
		<th>Title</th>
		<th>Content</th>
		<th colspan="3"></th>
	</tr>
	
	<% @post.each do |data| %>

		<tr>
			<td><%= data.title %></td>
			<td><%= data.text %></td>
			<td><%= link_to 'Show', post_path(data) %></td>
			<td><%= link_to 'Edit', edit_post_path(data) %></td>
			<td><%= link_to 'Destroy', post_path(data),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
<br>

<%= link_to 'Create New Post', new_post_path %>

<% #{posts_path}/#{data.id} %>

</body>